{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block content %}

    <div id="new-user" class="container section">
        <div class="section-header">
            <a href="" class="section-button-back" type="button" aria-expanded="false">
                <i class="bx bx-chevron-left"></i>
                <span>Retour</span>
            </a>
            <h3 class="d-block navbar-title pt-3 ">Ajouter un utilisateur</h3>
            <hr>
        </div>
        {{ form_start(form) }}
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.matricule) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.nom) }}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    {{ form_row(form.prenoms)}}
                </div>
                <div class="col-6">
                    {{ form_row(form.email)}}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    {{ form_row(form.fonction)}}
                </div>
                <div class="col-6">
                    {{ form_row(form.password)}}
                </div>
            </div>
            <div class="mt-2">
                <button class="action-button" type="submit" aria-expanded="false">
                    <i class="bx bx-plus"></i>
                    <span>Ajouter le producteur</span>
                </button>
            </div>
        {{ form_end(form) }}

    </div>
{% endblock %}



 {% block stylesheets %}
     <style>

