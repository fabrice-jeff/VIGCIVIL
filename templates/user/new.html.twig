         }
         .section-header .section-button-back span{
             color: #467241;
             font-weight: 500;
             font-size: 13px;
             line-height: 24px;
             vertical-align: middle;
         }

         #new-user form  button.action-button{
             border: none;
             margin-bottom: 30px;
         }
     </style>
 {% endblock %}
